doctype html
html
    head
        meta(charset='utf-8')
        title= pageTitle
        meta(name='viewport', content='width=device-width, initial-scale=1.0')

        //
            Bootstrap Includes
        block css
            link(href='/css/lib/bootstrap.min.css', rel='stylesheet', media='screen')
            link(href='/css/index.css', rel='stylesheet')

        //
            HTML5 shim, for IE6-8 support of HTML5 elements
        //if lt IE 9
            script(src='/js/libs/html5shiv.js')

  body.backdrop
    .navbar.navbar-fixed-top
        .container
            .row
                a.col-xs-offset-1.col-xs-2.text-center.btn.tab(href='/about')
                    span.glyphicon.glyphicon-question-sign.tabWords
                a.col-xs-2.text-center.btn.btn-primary.tab(href='/action')
                    span.glyphicon.glyphicon-bullhorn.tabWords
                a.col-xs-2.text-center.btn.btn-primary.tab(href='/')
                    span.glyphicon.glyphicon-home.tabWords
                a.col-xs-2.text-center.btn.btn-primary.tab(href='/search')
                    span.glyphicon.glyphicon-search.tabWords
                a.col-xs-2.text-center.btn.btn-primary.tab(href='/contaminants')
                    span.glyphicon.glyphicon-fire.tabWords
    block content
    block scripts
        script(type="text/javascript", src="/js/lib/jquery.min.js" )
        script(type="text/javascript", src="/js/lib/bootstrap.min.js" )
        script(type="text/javascript", src="/js/index.js" )
